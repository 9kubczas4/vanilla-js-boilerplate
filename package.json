{
  "name": "vanilla-js-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate project: typescript + scss + html.",
  "main": "dist/index.js",
  "scripts": {
    "start": "webpack-dev-server --open",
    "build:prod": "webpack --progress --mode=production",
    "build": "webpack --progress --mode=development",
    "test": "set TS_NODE_COMPILER_OPTIONS={\"module\": \"commonjs\" } & mocha -r ts-node/register \"src/tests/*.ts\"",
    "lint": "eslint src --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "watch": "webpack --progress --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/9kubczas4/vanilla-js-boilerplate.git"
  },
  "keywords": [
    "boilerplate",
    "vanilla",
    "typescript",
    "scss",
    "html"
  ],
  "author": "Pawel K",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/9kubczas4/vanilla-js-boilerplate/issues"
  },
  "homepage": "https://github.com/9kubczas4/vanilla-js-boilerplate#readme",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "chai": "^4.3.4",
    "copy-webpack-plugin": "^6.4.0",
    "css-loader": "^3.6.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-webpack-plugin": "^3.1.1",
    "file-loader": "^5.1.0",
    "husky": "^7.0.4",
    "mini-css-extract-plugin": "^2.5.0",
    "mocha": "^9.1.3",
    "node-sass": "^4.13.1",
    "sass": "^1.48.0",
    "sass-loader": "^8.0.2",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.3.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.3"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-push": "npm run test & npm run lint"
    }
  }
}
